<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/workerParentCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="15dp"
    android:backgroundTint="@color/cardview_dark_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:gravity="start"
            android:layout_marginStart="2dp"
            android:text="Id :  "
            android:textColor="#A6FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workerIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_toEndOf="@+id/txtId"
            android:layout_marginStart="30dp"
            android:text="122"
            android:textColor="#A6FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:gravity="start"
            android:layout_marginStart="2dp"
            android:text="Name :  "
            android:layout_below="@+id/workerIdTxt"
            android:textColor="#A6FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workerNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtId"
            android:layout_toEndOf="@+id/txtName"
            android:layout_marginStart="2dp"
            android:text="Worker Name"
            android:textColor="#A6FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>





</androidx.cardview.widget.CardView>