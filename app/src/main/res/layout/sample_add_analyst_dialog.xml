<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    app:cardCornerRadius="10dp"
    android:layout_centerInParent="true"
    android:backgroundTint="@android:color/transparent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sampleaddanalystbackground">

        <ImageView
            android:id="@+id/addAnalystDatabaseImageView"
            android:layout_width="230dp"
            android:layout_height="200dp"
            android:src="@drawable/addanalyst"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/analystUserNameLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/addAnalystDatabaseImageView"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/username"
                android:layout_marginTop="4dp"/>


            <EditText
                android:id="@+id/add_anlayst_username"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_wborder_color"
                android:elegantTextHeight="true"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:hint="USERNAME"
                android:textColorHint="@color/grey"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/analystPassLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/analystUserNameLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/password"
                android:layout_marginTop="4dp"/>


            <EditText
                android:id="@+id/add_anlayst_password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_wborder_color"
                android:elegantTextHeight="true"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:hint="PASSWORD"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/addNewAnalystToDatabaseBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:text="Add Analyst"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:textColor="@color/grey"
            android:layout_below="@+id/analystPassLinearLayout"
            android:backgroundTint="#FFA500"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:text="CANCEL"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:textColor="@color/white"
            android:layout_below="@+id/analystPassLinearLayout"
            android:backgroundTint="#FA2E2E"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>