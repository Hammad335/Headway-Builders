    <TextView
        android:id="@+id/addWorkerInfoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/audiowide"
        android:text="Worker Info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addWorkerInfoTxt"
        android:background="#FF9800"
        android:layout_marginTop="18dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:id="@+id/addWorkerScrollViewRelLayout"
        android:layout_below="@+id/addWorkerInfoTxt"
        android:layout_marginTop="20dp"
        android:paddingBottom="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addWorkerScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/bungee_inline"
                    android:text="Worker Id :"
                    android:textColor="#1B1B1B"
                    android:textColorLink="#00BCD4"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/workerId"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/bungee_inline"
                    android:inputType="number"
                    android:elegantTextHeight="true"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FF9800"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
